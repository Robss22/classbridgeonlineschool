{
  "name": "classbridge-admin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:webpack": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --no-cache --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "security-check": "npm audit --audit-level=moderate || echo 'Security check skipped due to registry issues'",
    "perf-check": "lighthouse http://localhost:3000 --quiet --chrome-flags='--headless' --output html --output-path ./lighthouse-report.html",
    "check": "npm run lint && npm run typecheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.51.0",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "classnames": "^2.5.1",
    "country-list": "^2.3.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.6",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.522.0",
    "next": "15.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-input-mask": "^2.0.4",
    "react-phone-input-2": "^2.15.1",
    "recharts": "^3.1.2",
    "resend": "^4.7.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lighthouse": "^11.5.0",
    "supabase": "^2.30.4",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
